<table>
  <th>
    <td>Avatar</td>
    <td>Name</td>
    <td>Score</td>
  </th>
  <% @scores.each do |score| %>
    <tr>
      <td><img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(score.user.email.downcase) %>"></td>
      <td><%= score.user.username %></td>
      <td><%= score.score %></td>
    </tr>
  <% end %>
</table>