<table class="zebra-striped">
  <thead>
  <tr>
    <th>Avatar</th>
    <th>Name</th>
    <th>Score</th>
  </thead>
  </tr>
  <% @scores.each do |score| %>
    <tr>
      <td><img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(score.user.email.downcase) %>"></td>
      <td><a href="/player-statistics/<%= score.user.username %>"><%= score.user.username %></a></td>
      <td><%= score.score %></td>
    </tr>
  <% end %>
</table>